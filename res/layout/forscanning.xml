<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForScanningActivity" >

    <Button
        android:id="@+id/first_btn_OK_whatever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_scan"
        android:layout_below="@+id/sync_time"
        android:layout_marginTop="100dp"
        android:text="@string/first_btn_OK"
        android:textSize="24sp" />
    
    <Button
        android:id="@+id/first_btn_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/first_btn_OK_whatever"
        android:layout_centerHorizontal="true"
        android:text="@string/first_btn_OK"
        android:textSize="24sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/first_btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/first_btn_OK_whatever"
        android:layout_alignRight="@+id/text_scan"
        android:text="@string/first_btn_clear"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/text_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="@string/first_hint"
        android:lines="1"
        android:textSize="24sp" >

        <requestFocus />
    </EditText>

    <ProgressBar
        android:id="@+id/sync_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_scan"
        android:layout_marginTop="60dp"
        android:layout_toLeftOf="@+id/sync_prompt"
        android:minHeight="24dp"
        android:minWidth="24dip"
        android:visibility="visible" />

    <TextView
        android:id="@+id/sync_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sync_time"
        android:layout_alignLeft="@+id/text_scan"
        android:layout_alignRight="@+id/text_scan"
        android:text="@string/sync_server_time_ing"
        android:textSize="20sp" />

</RelativeLayout>
