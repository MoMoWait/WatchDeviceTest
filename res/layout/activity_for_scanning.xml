<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForScanningActivity" >

    <Button
        android:id="@+id/first_btn_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_scan"
        android:layout_below="@+id/text_scan"
        android:layout_marginTop="100dp"
        android:text="@string/first_btn_OK"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:textSize="24sp" />

    <Button
        android:id="@+id/first_btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/first_btn_OK"
        android:layout_alignRight="@+id/text_scan"
        android:text="@string/first_btn_clear"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/text_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="@string/first_hint"
        android:lines="1"
        android:textSize="24sp" >

        <requestFocus />
    </EditText>

</RelativeLayout>
